generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  isadmin Boolean @default(false)
}

model Post{
  id String @id @default(cuid())
  title String
  body String
  image String
  likes Int @default(0)
  links String @default("")
  authorId String
}

model Comment{
  id String @id @default(cuid())
  body String
  name String
  authorId String
  postId String
}

model Like{
  id String @id @default(cuid())
  authorId String
  postId String
}
